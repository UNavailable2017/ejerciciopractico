      <div class="row">
        <div class="col-xs-12 col-md-8"><div class="well">.col-xs-12 .col-md-8</div></div>
        <div class="col-xs-6 col-md-4"><div class="well">.col-xs-6 .col-md-4</div></div></div>
      </div>

      <!-- Columns start at 50% wide on mobile and bump up to 33.3% wide on desktop -->

        <div class="col-xs-6 col-md-4"><div class="well">.col-xs-6 .col-md-4</div></div>
        <div class="col-xs-6 col-md-4"><div class="well">.col-xs-6 .col-md-4</div></div>
        <div class="col-xs-6 col-md-4"><div class="well">.col-xs-6 .col-md-4</div></div>
      </div>

      <!-- Columns are always 50% wide, on mobile and desktop -->
